{
    "compilerOptions": {
      "target": "es6", // Specify the ECMAScript target version
      "module": "commonjs", // Specify the module code generation
      "rootDir": "./src", // Specify the root directory of source files
      "outDir": "./dist", // Redirect output structure to the distribution directory
      "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
      "strict": true, // Enable all strict type-checking options
      "noImplicitAny": true, // Raise error on expressions and declarations with an implied 'any' type
      "resolveJsonModule": true // Allow importing JSON files
    },
    "include": ["./src/server/**/*"] // Specify which files to include in the compilation
  }